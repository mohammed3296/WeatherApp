<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">#4E4A4A</item>
        <item name="android:textSize">18sp</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlActivated">#000000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="InputTheme" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/textSizeTitle</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="TitleTheme" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/textSizeTitle</item>
        <item name="android:textAlignment">viewStart</item>

    </style>
</resources>
